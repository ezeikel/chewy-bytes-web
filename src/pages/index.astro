---
const title = "Chewy Bytes";
const description = "Building the internet.";
const year = new Date().getFullYear();
import "./../styles/global.css";
import "@fontsource/alan-sans";
import "@fontsource-variable/inter";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-white text-slate-900 antialiased">
    <main
      class="mx-auto flex min-h-screen max-w-3xl flex-col items-center justify-center px-6 text-center"
    >
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl font-alan-sans">
        Chewy Bytes
      </h1>
      <p class="mt-3 text-lg text-slate-600 font-inter">
        Building the internet.
      </p>

      <p class="mt-6 text-slate-500 font-inter">
        <a class="underline" href="mailto:hello@chewybytes.com"
          >hello@chewybytes.com</a
        >
      </p>

      <footer class="mt-12 text-sm text-slate-400 font-inter">
        Â© {year} Chewy Bytes Limited
      </footer>
    </main>
  </body>
</html>
